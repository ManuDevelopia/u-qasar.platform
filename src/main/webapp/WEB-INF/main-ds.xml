<datasources xmlns="http://www.jboss.org/ironjacamar/schema">

  	<datasource jndi-name="java:jboss/datasources/uqasarDS${ds.name}"
		enabled="true" use-java-context="true" pool-name="${ds.pool.name}">
		<connection-url>${ds.connection.url}</connection-url>
		<driver>${ds.driver}</driver>
		<pool></pool>
		<security>
			<user-name>${ds.username}</user-name>
			<password>${ds.password}</password>
		</security>
	</datasource>
